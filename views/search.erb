<center>
  <% unless @results.nil? %>
    <% for @item in @results %>
      <div class="panel panel-default">
        <div class="panel-heading"><%= @item['word'] %></div>
        <div class="panel-body">
          <%= @item['definition'] %>
        </div>
      </div>
    <% end %>
  <% else %>
    <h4>Oops... no results found! Try something else?</h4>
  <% end %>
  <form role="search" action="/search">
    <div class="form-group">
      <input name="q" type="text" class="form-control" placeholder="Search" style="margin-top: 7%; margin-right: 3px; width: calc(100% - 100px); float: left">
    </div>
    <button type="submit" class="btn btn-default" style="margin-top: 7%; width: 97px; float: left">Submit</button>
  </form>
</center>
